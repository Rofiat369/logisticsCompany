<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/styles/styles.css">
    <title> <%= pageTitle %> Logistics</title>
  </head>
  
  <body>

    <%- include('../partials/navigation') %> 

    <%- include('../partials/sidebar') %> 

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
          >
            <h1 class="h2"></h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-dark">
                  Export as pdf
                </button>
              </div>
              <button
                type="button"
                class="btn btn-sm btn-outline-dark dropdown-toggle"
              >
                <span data-feather="calendar"></span>
                This week
              </button>
            </div>
          </div>

          <h2>Inventory Items</h2>
          <hr />
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th scope="col"> S/N </th>
                  <th scope="col">Name</th>
                  <th scope="col">Item Quantity</th>
                  <th scope="col">location</th>
                  <th scope="col">Created at</th>
                  <th scope="col">Amount</th>
                  <th scope="col">Vendors</th>
                  <th scope="col"></th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <!--  -->
                <% for(const item of items){ %>
                  <tr>
                    <td><%= item.identity %> </td>
                    <td><%= item.item_name %> </td>
                    <td><%= item.item_quantity %></td>
                    <td><%= item.location %></td>
                    <td><%= item.created_at.getFullYear()+ '-' + ('0' + (item.created_at.getMonth()+1)).slice(-2) + '-'+('0' + item.created_at.getDate()).slice(-2) %> </td>
                    <td><%= item.amount %></td>
                    <td><%= item.vendors_name %></td>
                   
                    <td><button class="btn btn-outline-danger deletebtn" id="<%= item.identity %>">Delete</button></td>
                  </tr>
               <% }%>
                
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
  <div class="b bg-dark">
    <%- include('../partials/footer') %> 
  </div>

  <script src="/scripts/delete.js"></script>
</body>

</html>
